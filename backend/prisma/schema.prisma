// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?  // 선택
  passwordHash String   // 해시만 저장
  role         String?  // 선택
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
